<div>
  <h1 class="font-bold text-4xl">Add Comments</h1>

  <%= form_with(
    model:[ @post, @comment],
    local: true) do |form| %>
    <div class="space-y-5">
      <div class="field">
        <%= form.label :content %><br />
        <%= form.text_area :content,
          class: "w-full border-2 border-gray-200 p-2 rounded-lg" %>
      </div>

      <div class="actions">
        <%= form.submit "Add Comment",
          class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
      </div>
    </div>
  <% end %>
</div>
