<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @post %>

    <%= link_to "Edit this post",
      edit_post_path(@post),
      class: "mt-2 rounded-lg py-3 px-5 bg-green-100 inline-block font-medium" %>

    <div class="inline-block ml-2">
      <%= button_to "Destroy this post",
        post_path(@post), method: :delete,
        class: "mt-2 rounded-lg py-3 px-5 bg-red-200 font-medium" %>
    </div>

    <%= link_to "Back to posts",
      posts_path,
      class: "ml-2 rounded-lg py-3 px-5 bg-blue-100 inline-block font-medium" %>

    <%= render "comments/form", post: @post %>

    <%= render "comments/index", comments: @post.comments %>

  </div>
</div>
