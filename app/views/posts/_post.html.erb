<div id="<%= dom_id post %>" class="border-2 border-gray-200 p-5 rounded-lg my-2">
  <%# title %>
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </p>

  <%# content %>
  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= post.content %>
  </p>

  <%# user %>
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= post.user.email %>
  </p>


  <%# actions %>
  <% if action_name != "show" %>
    <%= link_to "Show this post", post,
      class: "rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium" %>
    <%= link_to "Edit this post", edit_post_path(post),
      class: "rounded-lg py-3 ml-2 px-5 bg-yellow-600 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
